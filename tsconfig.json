{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
